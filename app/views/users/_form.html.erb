<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
<div class="container">
        <div class="span12">
            <div class="span6">
              <%= f.input :email, :autofocus => true %>
              <%= f.input :username %>
              <%= f.input :name %>
              <%= f.input :lastname %>
              <%= f.input :address %>

            </div>
            <div class ="span5">
                    
              <%= f.input :cuit %>
              <%= f.input :dni %>

            <% if @user.role == "Admin" %>       
                    <%= f.select :role, User::ROLE  %>
                    <%= f.input :enabled, label: "Habilitar" %>
              <% end %>
              <%= f.input :password %>
              <%= f.input :password_confirmation%>

            </div>
        <div class="span12"><%= f.button :submit %></div>
</div>
<% end %>
