<div class="col-md-12 line">
   <div class="col-md-4">
      <%= f.input( :name, label: false,  input_html: {
         class: 'form-control ',
         data: {'autocomplete-field' => true,
                'autocomplete-for' => '#invoice_orders_#{id}_article_id',
                'autocomplete-url' => articles_path(format: :json)
      } 
      }) %>
   <%= f.input :article_id, :input_html => {class: 'form-control'}, as: :hidden , label: false%>
      <%= f.input :quantity_stock, as: :hidden , label: false%>
   </div>
   <div class=" col-md-1">
      <%= f.input :quantity, label: false, as: :string, :input_html => {:class => "form-control quantity"}  %>
   </div>
   <div class="col-md-2">
      <%= f.input :unit_price, label: false, as: :string, :input_html => {:class => "form-control"}  %>
   </div>
   <div class=" col-md-1">
      <%= f.input :discount, label: false, as: :string, :input_html => {:class => "form-control discount "} %>
   </div>
   <div class=" col-md-1">
      <%= f.input :price_total, label: false, as: :string, :input_html => {:class => "form-control price_subtotal"} %>
   </div>
   <div class="col-md-1">
      <%if current_user.role == 'Admin' %>
         <%= f.hidden_field :_destroy %>
      <%= button_to "Eliminar", '#', class: "remove_fields_orders btn btn-danger form-control" %>
   <% end %>
   </div>

</div>
